<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:oculus_sport.ViewModels.Auth"
             x:Class="oculus_sport.Views.Auth.SignUpPage"
             Title="Sign Up"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

            <!-- 1. CORPORATE LOGO -->
            <Image Source="uts_logo.png" 
                   HeightRequest="150" 
                   HorizontalOptions="Center" 
                   Aspect="AspectFit" 
                   Margin="0,20,0,10"/>

            <Label Text="Create Account" 
                   FontSize="28" 
                   TextColor="{StaticResource Black}" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <!-- 2. SIGN UP FORM -->
            <VerticalStackLayout Spacing="15">

                <!-- Email Entry -->
                <Border Stroke="{StaticResource Gray300}" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="15,0">
                    <Entry Placeholder="Student Email (e.g. id@student.uts.edu.my)" 
                           Text="{Binding Email}"
                           TextColor="{StaticResource Black}"
                           PlaceholderColor="{StaticResource Gray400}"
                           Keyboard="Email"
                           HeightRequest="50"/>
                </Border>

                <!-- Name Entry -->
                <Border Stroke="{StaticResource Gray300}" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="15,0">
                    <Entry Placeholder="Full Name" 
                           Text="{Binding Name}"
                           TextColor="{StaticResource Black}"
                           PlaceholderColor="{StaticResource Gray400}"
                           HeightRequest="50"/>
                </Border>

                <!-- Student ID Entry -->
                <Border Stroke="{StaticResource Gray300}" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="15,0">
                    <Entry Placeholder="Student ID" 
                           Text="{Binding StudentId}"
                           TextColor="{StaticResource Black}"
                           PlaceholderColor="{StaticResource Gray400}"
                           HeightRequest="50"/>
                </Border>


                <!-- Password Entry -->
                <Border Stroke="{StaticResource Gray300}" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="15,0">
                    <Entry Placeholder="Password" 
                           IsPassword="True"
                           Text="{Binding Password}"
                           TextColor="{StaticResource Black}"
                           PlaceholderColor="{StaticResource Gray400}"
                           HeightRequest="50"/>
                </Border>

                <!-- Confirm Password Entry -->
                <Border Stroke="{StaticResource Gray300}" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="15,0">
                    <Entry Placeholder="Confirm Password" 
                           IsPassword="True"
                           Text="{Binding ConfirmPassword}"
                           TextColor="{StaticResource Black}"
                           PlaceholderColor="{StaticResource Gray400}"
                           HeightRequest="50"/>
                </Border>

                <!-- Password Requirement Hint -->
                <Label Text="Password must be at least 8 characters long, contain a capital letter, and a special symbol." 
                       FontSize="11" 
                       TextColor="{StaticResource Gray500}" 
                       HorizontalTextAlignment="Center"/>

            </VerticalStackLayout>

            <!-- 3. ACTIONS -->
            <Button Text="Sign Up" 
                    Command="{Binding SignUpCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    Margin="0,10,0,0"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                               IsVisible="{Binding IsBusy}"
                               Color="{StaticResource Primary}"
                               HorizontalOptions="Center"/>

            <!-- Bottom Section: Login Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Already have an account?" TextColor="{StaticResource Gray500}"/>
                <Label Text="Log in" 
                       TextColor="{StaticResource Primary}" 
                       FontAttributes="Bold"
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToLoginCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
