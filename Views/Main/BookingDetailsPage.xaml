<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:oculus_sport.ViewModels.Main"
             x:Class="oculus_sport.Views.Main.BookingDetailsPage"
             Title="Details"
             BackgroundColor="{StaticResource PageBackgroundLight}">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="20">
            <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="15" StrokeThickness="0">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Booking Schedule" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                    <Label Text="{Binding Booking.FacilityName}" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                    <Label Text="{Binding Booking.Date, StringFormat='{0:D}'}" TextColor="Gray"/>
                    <Label Text="{Binding Booking.TimeSlot}" TextColor="Gray"/>
                </VerticalStackLayout>
            </Border>

            <VerticalStackLayout Spacing="15">
                <Label Text="Student Details" FontSize="16" FontAttributes="Bold" TextColor="Black"/>

                <Entry Placeholder="Full Name" Text="{Binding ContactName}" BackgroundColor="White" TextColor="Black"/>
                <Entry Placeholder="Student ID" Text="{Binding ContactStudentId}" BackgroundColor="White" TextColor="Black"/>
                <Entry Placeholder="Phone Number" Text="{Binding ContactPhone}" Keyboard="Telephone" BackgroundColor="White" TextColor="Black"/>
            </VerticalStackLayout>

            <Button Text="PROCEED" Command="{Binding ProceedCommand}" BackgroundColor="{StaticResource Primary}" CornerRadius="25" HeightRequest="50" FontAttributes="Bold" Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>