<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:oculus_sport.ViewModels.Main"
             xmlns:models="clr-namespace:oculus_sport.Models"
             x:Class="oculus_sport.Views.Main.HomePage"
             Title="Home"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <Grid Grid.Row="0" BackgroundColor="{StaticResource Primary}" Padding="20,20,20,30" RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
            <VerticalStackLayout Grid.Column="0" Spacing="2">
                <Label Text="{Binding UserName, StringFormat='Hello, {0}'}" 
                       TextColor="{StaticResource PrimaryText}" 
                       FontSize="16" />
                <Label Text="Let's find your court!" 
                       TextColor="{StaticResource PrimaryText}" 
                       FontSize="22" 
                       FontAttributes="Bold" />
            </VerticalStackLayout>

            <ImageButton Grid.Column="1" 
                         HeightRequest="30" 
                         WidthRequest="30" 
                         HorizontalOptions="End" 
                         VerticalOptions="Start"
                         Source="notification.png"
                         Command="{Binding GoToNotificationsCommand}"/>
                         

            <Border Grid.Row="1" Grid.ColumnSpan="2" Margin="0,20,0,0" 
                    StrokeShape="RoundRectangle 10" 
                    BackgroundColor="White" 
                    StrokeThickness="0" 
                    HeightRequest="50"
                    Padding="15,0">
                <Grid ColumnDefinitions="Auto,*">
                    <Label Text="ðŸ”" VerticalOptions="Center" TextColor="Gray" Margin="0,0,10,0"/>
                    <Entry Grid.Column="1" 
                           Placeholder="Search Court..." 
                           TextColor="Black" 
                           PlaceholderColor="Gray"
                           VerticalOptions="Center"/>
                </Grid>
            </Border>
        </Grid>

        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Categories" FontSize="18" FontAttributes="Bold" TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>

                    <CollectionView ItemsSource="{Binding Categories}" HeightRequest="50">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:SportCategory">
                                <Border StrokeShape="RoundRectangle 20" 
                                        StrokeThickness="0"
                                        BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter={StaticResource Primary}}"
                                        Padding="20,10">
                                    <Label Text="{Binding Name}" 
                                           TextColor="{Binding IsSelected, Converter={StaticResource SelectedTextColorConverter}}"
                                           FontAttributes="Bold" 
                                           VerticalOptions="Center"/>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomePageViewModel}}, Path=SelectCategoryCommand}" CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="10">
                    <Label Text="Available Courts" FontSize="18" FontAttributes="Bold" TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>

                    <CollectionView ItemsSource="{Binding Facilities}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="15" VerticalItemSpacing="15"/>
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Facility">
                                <Border StrokeShape="RoundRectangle 15" Stroke="{StaticResource Gray200}" StrokeThickness="1" BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray950}}">
                                    <Grid RowDefinitions="120, Auto">
                                        <Image Grid.Row="0" Source="{Binding ImageUrl}" Aspect="AspectFill" BackgroundColor="LightGray"/>

                                        <VerticalStackLayout Grid.Row="1" Padding="10" Spacing="2">
                                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="14" LineBreakMode="TailTruncation" TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                                            <Label Text="{Binding Location}" FontSize="11" TextColor="Gray" LineBreakMode="TailTruncation"/>
                                        </VerticalStackLayout>

                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomePageViewModel}}, Path=BookFacilityCommand}" CommandParameter="{Binding .}"/>
                                        </Grid.GestureRecognizers>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>